<h2>All Types</h2>
<% Type.all.each do |type| %>
	<%= link_to type.name, spots_path(type: type.name) %> <br>
<% end %>

<%= link_to '++', new_spot_path %>

<h1>Cпоты</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Image</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @spots.each do |spot| %>
      <tr>
        <td><%= spot.name %></td>
        <td><%= spot.description %></td>
        <td><%= spot.type.name %></td>
        <td><%= spot.location %></td>
        <td>
          <%= link_to(image_tag(spot.image.thumb.url, alt: 'Image'), spot.image.url, target: '_blank') if spot.image? %>
        </td>
        <td><%= link_to 'Show', spot %></td>
          <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
          <td><%= link_to 'Destroy', spot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

