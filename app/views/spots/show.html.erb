<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @spot.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @spot.description %>
</p>

<p>
  <strong>Type:</strong>
  <%= @spot.type.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @spot.location %>
</p>


<%= image_tag(@spot.image.url, alt: 'Image') if @spot.image? %>

<% if user_signed_in? %>

<% pre_saved = @spot.saveds.find { |saved| saved.user_id == current_user.id} %>
  <% if pre_saved %>
    <%= button_to 'Remove from Saved', spot_saved_path(@spot, pre_saved), method: :delete %>
  <% else %>
    <%= button_to 'Add to Saved', spot_saveds_path(@spot), method: :post %>
<% end %>

<% end %>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_spot_path(@spot) %> |
<% end %>

<%= link_to 'Back', spots_path %>

<h2>Comments</h2>
<%= render @spot.spot_comments %>

<h2>Add a comment:</h2>
<% if user_signed_in? %>
  <%= render "spot_comments/form" %>
  <% else %>
  <p>Please <%= link_to 'login', new_user_session_path %> or <%= link_to 'register', new_user_registration_path %> to comment.</p>
<% end %>