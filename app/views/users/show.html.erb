<div class="posts_page">
<div class="flex-title_button">
<h1 class="posts_title">
<%= @user.username %>
</h1>
<% if user_signed_in? && current_user.isadmin == true && @user.id == current_user.id %>
<p>admin</p>
<% end %>
</div>

<div class="users_data">
<h2>ID <%= @user.id %></h2>
<h2>Email <%= @user.email %></h2>
</div>


<div class="user_grid">
<div class="user_items">
<h2>
Выучено <%= @user.favorites.count %> <%= (@user.favorites.count) == 1 ? 'трюк' : 'трюков'%>
</h2>
<% @posts.each do |post| %>

    <%= link_to post.title, post %>
<% end %>
</div>

<div class="user_items">
<h2>
Сохранено <%= @user.saveds.count %> <%= (@user.saveds.count) == 1 ? 'спот' : 'спотов'%>
</h2>
<% @spots.each do |spot| %>
  <%= link_to spot.name, spot %>
<% end %>
</div>

<div class="user_items">
<h2>
Иду на <%= @user.goes.count %> <%= (@user.goes.count) == 1 ? 'ивент' : 'ивентов'%>
</h2>
<% @events.each do |event| %>
  <%= link_to event.name, event %>
<% end %>
</div>

</div>

<% if user_signed_in? && @user.id == current_user.id %>
	<button class="edit_user"><%= link_to 'Редактировать профиль', edit_user_registration_path %></button>
<% end %>

<% if user_signed_in? && current_user.isadmin == true %>
<% end %>
</div>

