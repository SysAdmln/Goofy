<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Level:</strong>
  <%= @event.level %>
</p>

<p>
  <strong>Category:</strong>
  <%= @event.category.name %>
</p>

<p><%= @event.goes.count %> <%= (@event.goes.count) == 1 ? 'Пойдет' : 'Пойдут'%></p>

<% if user_signed_in? %>
<% pre_go = @event.goes.find { |go| go.user_id == current_user.id} %>
<% if pre_go %>
  <%= button_to 'Не пойду', event_go_path(@event, pre_go), method: :delete %>
<% else %>
  <%= button_to 'Пойду', event_goes_path(@event), method: :post %>
<% end %>
<% end %>


<% if user_signed_in? %>
<%= link_to 'Edit', edit_event_path(@event) %> 
<% end %>

<%= link_to 'Back', events_path %>

<h2>Comments</h2>
<%= render @event.eventcomments %>

<% if user_signed_in? %>
  <h2>Add a comment:</h2>
    <%= render "eventcomments/form" %>
  <% else %>
  <p>Please <%= link_to 'login', new_user_session_path %> or <%= link_to 'register', new_user_registration_path %> to comment.</p>
<% end %>