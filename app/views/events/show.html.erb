<div class="posts_page">
<div class="new_post_title">
<%= link_to 'Назад к ивентам', events_path %>
<h1>
  <%= @event.name %>
</h1>
</div>

<div class="new_post_page">
<div class="block_post">
  <h3>
    Место
  </h3>
  <p>
    <%= @event.location %>
  </p>
</div>

<div class="block_post">
<h3>
  Дата
</h3>
<p>
  <%= @event.date %>
</p>
  
</div>

<div class="block_post">
<h3>
  Уровень
</h3>
<p>
  <%= @event.category.name %>
</p>
</div>

<button>
  <%= @event.goes.count %> <%= (@event.goes.count) == 1 ? 'Пойдет' : 'Пойдут'%>
</button>

<% if user_signed_in? %>
<% pre_go = @event.goes.find { |go| go.user_id == current_user.id} %>
<% if pre_go %>
  <%= button_to 'Не пойду', event_go_path(@event, pre_go), method: :delete %>
<% else %>
  <%= button_to 'Пойду', event_goes_path(@event), method: :post %>
<% end %>
<% end %>


<% if user_signed_in? && current_user.id == @event.user_id %>
<div class="post_edit">
  <%= link_to 'Изменить', edit_event_path(@event) %> 
  </div>
<% end %>
</div>

<div class="comment_post_block">
<h2>Комментарии</h2>
<%= render @event.eventcomments %>

<% if user_signed_in? %>
  <h2>Добавить коммент:</h2>
    <%= render "eventcomments/form" %>
  <% else %>
  <p>Please <%= link_to 'login', new_user_session_path %> or <%= link_to 'register', new_user_registration_path %> to comment.</p>
<% end %>
</div>
</div>