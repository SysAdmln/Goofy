<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Level:</strong>
  <%= @event.level %>
</p>

<% if user_signed_in? %>
<%= link_to 'Edit', edit_event_path(@event) %> 
<% end %>

<%= link_to 'Back', events_path %>

<h2>Comments</h2>
<%= render @event.eventcomments %>

<% if user_signed_in? %>
  <h2>Add a comment:</h2>
  <%= render "eventcomments/form" %>
  <% else %>
<p>Please <%= link_to 'login', new_user_session_path %> or <%= link_to 'register', new_user_registration_path %> to comment.</p>
<% end %>