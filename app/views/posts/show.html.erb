<div class="posts_page">
<div class="new_post_title">
<%= link_to 'Назад к постам', posts_path %>
<h1>
<strong></strong>
<%= @post.title %>
</h1>
</div>

<div class="new_post_page">
<div class="block_post">
    <h3>Время</h3>
    <p>
    <%= @post.time %>
    </p>
  </div>


  <div class="block_post">
  <h3>
    Категория
  </h3>
  <p>
    <%= @post.category.name %>
  </p>
</div>

  <div class="block_post">
    <h3>
    Описание
    </h3>
  <p>
    <%= @post.description %>
  </p>
  </div>

<div class="block_post">
  <%= image_tag(@post.image.url, alt: 'Image') if @post.image? %>
</div>

  <div class="block_post">
  <p>
    <%= @post.content.html_safe %>
  </p>
  </div>
<button>
<%= @post.likes.count %> <%= (@post.likes.count) == 1 ? 'Like' : 'Likes'%>
</button>

<% if user_signed_in? %>

  <% pre_like = @post.likes.find { |like| like.user_id == current_user.id} %>
    <% if pre_like %>
      <%= button_to 'Unlike', post_like_path(@post, pre_like), method: :delete %>
    <% else %>
      <%= button_to 'Like', post_likes_path(@post), method: :post %>
  <% end %>

  <% pre_favorite = @post.favorites.find { |favorite| favorite.user_id == current_user.id} %>
    <% if pre_favorite %>
        <%= button_to 'Убрать из выученных', post_favorite_path(@post, pre_favorite), method: :delete %>
    <% else %>
        <%= button_to 'Добавить в выученные', post_favorites_path(@post), method: :post %>
  <% end %>


<% end %>
<div class="edit">
<% if user_signed_in? && current_user.isadmin == true  %>
    <div class="post_edit">
      <%= link_to 'Изменить', edit_post_path(@post) %> 
    </div>
  <% end %>
  <%  if user_signed_in? && current_user.isadmin == true %>
  <div class="post_delete">
    <%= link_to 'Удалить', posts_path %>
  </div>
  <% end %>
</div>

</div>

<div class="comment_post_block">

  <h2>Комментарии</h2>
    <%= render @post.comments %>
  
  <% if user_signed_in? %>
  <h2>Добавить коммент:</h2>
    <%= render "comments/form" %>
  <% else %>
    <p> Please <link_to 'login', new_user_session_path %> or <%= link_to 'register', new_user_registration_path %> to comment.</p>
  <% end %>
</div>
</div>
