<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Название %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
	<%= form.label :Время %>
	<%= form.text_field :time %>
  </div>

  <div class="field">
	<%= form.label :Сложность %>
	<%= form.text_field :level %>
	</div>

  <div class="field">
	<%= form.label :Описание %>
	<%= form.text_field :description %>
</div>

  <div class="field">
      <%= form.label :category_id %>
      <%= form.select :category_id, Category.pluck(:name, :id) %>
  </div>

  <div>
	<%= form.label :Изображение %>
	<%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :Контент %>
    <%= form.text_area :content %>
  </div>


  <div class="actions submit_btn_post">
    <%= form.submit ": : Создать трюк : :" %>
  </div>
<% end %>
